@page
@model Cms.Clients.AdminPanel.Pages.Language.IndexModel
@{
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6 class="d-inline">لیست زبان ها</h6>
                <a class="btn btn-success float-start d-inline" href="/language/create">ساخت زبان جدید</a>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">عنوان</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">نام زبان</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Direction</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">منطقه</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var language in Model.Languages)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <img src="/img/small-logos/logo-jira.svg" class="avatar avatar-sm me-3" alt="user1">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@language.Title</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@language.Name</p>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span class="badge badge-sm bg-gradient-success">@((language.Rtl)?"RTL":"LTR")</span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">@language.Region</span>
                                    </td>
                                    <td class="align-middle">
                                        <a href="/language/edit?id=@language.Id" class="badge badge-sm bg-gradient-info" data-toggle="tooltip" data-original-title="Edit user">
                                            ویرایش زبان
                                        </a>
                                        <a href="/language/edit?id=@language.Id" class="badge text-black badge-sm bg-gradient-info" data-toggle="tooltip" data-original-title="Edit user">
                                            جزئیات
                                        </a>
                                        <a href="/language/edit?id=@language.Id" class="badge badge-sm bg-gradient-danger" data-toggle="tooltip" data-original-title="Edit user">
                                            حذف
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
