@page
@model Cms.Clients.AdminPanel.Pages.NewsType.EditModel
@{
}

<form method="post">
    <input type="hidden" asp-for="NewsType.Id"/>
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">ویرایش تایپ خبری</h3>
        </div>
        <div class="col-md-12 mb-lg-0 mb-4">
            <div class="card mt-4">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>عنوان : <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" asp-for="NewsType.Title" />
                            </div>
                        </div>
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg">
                                <label>نام : <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" asp-for="NewsType.Name" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>زبان : <span class="text-danger">*</span></label>
                                <select class="form-control" asp-for="NewsType.LanguageId">
                                    <option hidden selected>زبان مورد نظر را انتخاب کنید</option>
                                    @foreach (var language in Model.Languages)
                                    {
                                        <option value="@language.Id" selected="@(Model.NewsType.LanguageId==language.Id)">@language.Title</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>آیا صفحه جداگانه ای است؟ : <span class="text-danger">*</span></label>
                                <select class="form-control" asp-for="NewsType.IsPage">                                    
                                    <option value="@true">بله</option>
                                    <option value="@false">خیر</option>
                                </select>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>وضعیت : <span class="text-danger">*</span></label>
                                <select class="form-control" asp-for="NewsType.IsEnable">
                                    <option value="@true">فعال</option>
                                    <option value="@false">غیر فعال</option>
                                </select>
                            </div>
                        </div>                                             
                    </div>


                </div>

                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <input type="submit" class="btn-warning btn" value="ویرایش تایپ خبری" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>
