@page
@inject IConfiguration _config;
@model Cms.Clients.AdminPanel.Pages.AboutUs.IndexModel
@{
    ViewBag.Title = "لیست درباره موزه";
    ViewBag.Page = "درباره موزه";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>عنوان</th>
                            <th>زبان</th>
                            <th>وضعیت</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var aboutUs in Model.AboutList)
                        {
                            <tr id="aboutUs[@aboutUs.Id]">
                                <td>@aboutUs.Title</td>
                                <td>
                                    @Model.Languages.FirstOrDefault(t => t.Id == aboutUs.LanguageId).Name
                                </td>
                                @if (aboutUs.IsEnable)
                                {
                                    <td>
                                        <span>فعال</span>
                                        <i class="fa fa-check"></i>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <span>غیرفعال</span>
                                        <i class="fa fa-close"></i>
                                    </td>
                                }
                                <td>
                                    <a href="/aboutus/edit?id=@aboutUs.Id" class="text-white btn btn-primary">ویرایش</a>
                                    <a onclick="Delete(@aboutUs.Id)" class="text-white btn btn-danger">حذف</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>

@section Scripts {
    <script>
        function Delete(id) {

            if (confirm("آیا از حذف این توضیحات مطمئن هستید? ")) {
                $.ajax({
                    type: "Get",
                    url: '@_config.GetSection("DomainAddress").Value/News/Delete?id=' + id,
                    success: function () {
                        document.getElementById("aboutUs[" + id + "]").setAttribute("style", "display:none");
                    },
                    error: function () {
                        alert("خطایی رخ داده است!");
                    }
                });
            }
        }
    </script>
}
