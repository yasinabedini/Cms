@page
@model Cms.Clients.AdminPanel.Pages.AboutUs.CreateModel
@{
    ViewBag.Title = "ایجاد درباره موزه";
    ViewBag.Page = "درباره موزه";
}

<form enctype="multipart/form-data" method="post">
    <input type="hidden" value="متنی وجود ندارد" asp-for="About.Introduction" />
    <input type="hidden" asp-for="About.NewsTypeId" value="@ViewData["NewsAboutUs"]" />
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">درباره ما</h3>
        </div>
        <div class="col-md-12 mb-lg-0 mb-4">
            <div class="card mt-4">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>عنوان : <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" asp-for="About.Title" />
                            </div>
                        </div>

                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>زبان : <span class="text-danger">*</span></label>
                                <select class="form-control" asp-for="About.LanguageId">
                                    <option hidden selected>زبان مورد نظر را انتخاب کنید</option>
                                    @foreach (var language in Model.Languages)
                                    {
                                        <option value="@language.Id">@language.Title</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>متن : <span class="text-danger">*</span></label>

                                <div class="col-md-12">
                                    <div class="card card-info ">
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                            <div class="mb-3 mt-3">
                                                <textarea id="editor1" asp-for="About.Text" style="width: 100%">لطفا متن مورد نظر خودتان را وارد کنید</textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card -->

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>تاریخ انتشار : <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" asp-for="About.PublishDate" />
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="row">
                            <div class="col-md-6 mb-md-0 mb-4">
                                <label for="exampleInputFile">تصویر درباره موزه <span class="text-danger">*</span> </label>
                                <div class="input-group">
                                    <div class="">
                                        <input type="file" asp-for="Image" class="form-control m-2" id="mainImage">
                                    </div>
                                </div>
                                <span class="text-danger" asp-validation-for="Image"></span>
                            </div>

                            <div class="col-md-6 mb-md-0 mb-4">
                                <img id="mainImgAvatar" class=" ImageBox" src="~/dist/img/DefalutPic.png" />
                            </div>
                        </div>
                    
                        <div class="row mt-3">
                            <div class="col-md-6 mb-md-0 mb-4">
                                <label for="exampleInputFile">تصویر جانبی</label>
                                <div class="input-group">
                                    <div class="">
                                        <input type="file" class="form-control m-2" asp-for="Images" id="secondImage">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-md-0 mb-4">
                                <label for="exampleInputFile">تصویر جانبی</label>
                                <div class="input-group">
                                    <div class="">
                                        <input type="file" class="form-control m-2" asp-for="Images" id="thirdImage">
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="Images" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-md-12 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <input type="submit" class="btn-success btn" value="ایجاد درباره ما" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    
</form>

@section Scripts {

    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#mainImgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#mainImage").change(function () {
            readURL(this);
        });
    </script>


    <script>
        $(function () {
            // Replace the <textarea id="editor1"> with a CKEditor
            // instance, using default configuration.
            ClassicEditor
                .create(document.querySelector('#editor1'))
                .then(function (editor) {
                    // The editor instance
                })
                .catch(function (error) {
                    console.error(error)
                })

            // bootstrap WYSIHTML5 - text editor

            $('.textarea').wysihtml5({
                toolbar: { fa: true }
            })
        })
    </script>
}