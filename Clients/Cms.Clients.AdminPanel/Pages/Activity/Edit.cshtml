@page
@model Cms.Clients.AdminPanel.Pages.Activity.EditModel
@inject IConfiguration _config;
@{
    ViewBag.Title = "ویرایش برنامه ها و فعالیت ها";
    ViewBag.Page = "فعالیت ها";
}

<form enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Activity.Id" />
    <input type="hidden" asp-for="Activity.NewsTypeId" />
    <input type="hidden" asp-for="Activity.MainImageName" />
    <input type="hidden" asp-for="Activity.Introduction" />
    <input type="hidden" asp-for="Activity.PublishDate" />
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">برنامه ها و فعالیت ها</h3>
        </div>
        <div class="col-md-12 mb-lg-0 mb-4">
            <div class="card mt-4">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>عنوان : <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" asp-for="Activity.Title" />
                            </div>
                        </div>

                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>زبان : <span class="text-danger">*</span></label>
                                <select class="form-control" asp-for="Activity.LanguageId">
                                    <option hidden selected>زبان مورد نظر را انتخاب کنید</option>
                                    @foreach (var language in Model.Languages)
                                    {
                                        <option value="@language.Id">@language.Title</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                   
                    <div class="row">
                        <div class="col-md-12 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>متن : <span class="text-danger">*</span></label>

                                <div class="col-md-12">
                                    <div class="card card-info ">
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                            <div class="mb-3 mt-3">
                                                <textarea id="editor1" asp-for="Activity.Text" style="width: 100%">لطفا متن مورد نظر خودتان را وارد کنید</textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card -->

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>وضعیت : <span class="text-danger">*</span></label>
                                <select class="form-control" asp-for="Activity.IsEnable">
                                    <option value="@true">فعال</option>
                                    <option value="@false">غیر فعال</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <label for="exampleInputFile">تصویر فعالیت </label>
                            <div class="input-group">
                                <div class="">
                                    <input type="file" asp-for="MainImage" class="form-control m-2" id="mainImage">
                                </div>
                            </div>
                            <span class="text-danger" asp-validation-for="MainImage"></span>
                        </div>

                        <div class="col-md-6 mb-md-0 mb-4">
                            <img id="mainImgAvatar" class=" ImageBox" src="@(_config.GetSection("FileManagerUrl").Value+$"/api/fileManager/getimage?imageName={Model.Activity.MainImageName}&&folder=news")" />
                        </div>
                    </div>


                    <div class="row mt-3">
                        <div class="col-md-12 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <input type="submit" class="btn-warning btn" value="ویرایش فعالیت" />
                            </div>
                        </div>
                    </div>
                </div>
             
            </div>
        </div>
    </div>    
</form>

@section Scripts {
    <script>
        $(function () {
            // Replace the <textarea id="editor1"> with a CKEditor
            // instance, using default configuration.
            ClassicEditor
                .create(document.querySelector('#editor1'))
                .then(function (editor) {
                    // The editor instance
                })
                .catch(function (error) {
                    console.error(error)
                })

            // bootstrap WYSIHTML5 - text editor

            $('.textarea').wysihtml5({
                toolbar: { fa: true }
            })
        })
    </script>
}