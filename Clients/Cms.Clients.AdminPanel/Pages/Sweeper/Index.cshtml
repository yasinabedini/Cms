@page
@model Cms.Clients.AdminPanel.Pages.Sweeper.IndexModel
@{
    ViewBag.Title = "لیست Sweeper";
    ViewBag.Model = "sweeper";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6 class="d-inline">لیست Sweeper</h6>
                <a class="btn btn-success float-start d-inline" href="/sweeper/create">ساخت Sweeper</a>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">عنوان</th>                                
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">وضعیت</th>                                
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sweeper in Model.SweeperList.QueryResult.ToList())
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <img src="/img/small-logos/logo-jira.svg" class="avatar avatar-sm me-3" alt="user1">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@sweeper.Title</h6>
                                            </div>
                                        </div>
                                    </td>
                                    @if (sweeper.IsEnable)
                                    {
                                        <td class="align-middle text-center text-sm">
                                            <span class="badge badge-sm bg-gradient-success">Enable</span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="align-middle text-center text-sm">
                                            <span class="badge badge-sm bg-gradient-secondary">Disable</span>
                                        </td>
                                    }
                         
                                    <td class="align-middle">
                                        <a href="/sweeper/edit?id=@sweeper.Id" class="badge badge-sm bg-gradient-info" data-toggle="tooltip" data-original-title="Edit user">
                                            ویرایش Sweeper
                                        </a>
                                        <a href="/sweeper/edit?id=@sweeper.Id" class="badge badge-sm bg-gradient-info" data-toggle="tooltip" data-original-title="Edit user">
                                            جزئیات
                                        </a>
                                        <a href="/sweeper/edit?id=@sweeper.Id" class="badge badge-sm bg-gradient-danger" data-toggle="tooltip" data-original-title="Edit user">
                                            حذف
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>