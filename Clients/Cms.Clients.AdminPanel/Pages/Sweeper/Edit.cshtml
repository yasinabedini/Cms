@page
@model Cms.Clients.AdminPanel.Pages.Sweeper.EditModel
@{
    ViewBag.Title = "ویرایش Sweeper";
    ViewBag.Model = "sweeper";
}

<form enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Sweeper.Id"/>
    <input type="hidden" asp-for="Sweeper.ImageName"/>
    <div class="col-md-12 mb-lg-0 mb-4">
        <div class="card mt-4">
            <div class="card-header pb-0 p-3">
                <div class="row">
                    <div class="col-6 d-flex align-items-center">
                        <h6 class="mb-0">ویرایش Sweeper</h6>
                    </div>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>عنوان : </label>
                            <input type="text" class="form-control" asp-for="Sweeper.Title" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg">
                            <label>لینک : </label>
                            <input type="text" class="form-control" asp-for="Sweeper.Link" />
                        </div>
                    </div>

                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>زبان : </label>
                            <select class="form-control" asp-for="Sweeper.LanguageId">
                                <option hidden selected>زبان مورد نظر را انتخاب کنید</option>
                                @foreach (var language in Model.Languages)
                                {
                                    if (Model.Sweeper.LanguageId == language.Id)
                                    {
                                        <option selected value="@language.Id">@language.Title</option>

                                    }
                                    else
                                    {
                                        <option value="@language.Id">@language.Title</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>متن : </label>
                            <textarea asp-for="Sweeper.Text" class="form-control">

                            </textarea>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>عکس  : </label>
                            <input type="file" class="form-control" name="image" id="mainImage" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <input type="submit" class="btn-warning btn" value="ویرایش Sweeper" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{

    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>

        CKEDITOR.replace('Sweeper_Text', {
            customConfig: '/js/Config.js'
        });

    </script>
}
