@page
@model Cms.Clients.AdminPanel.Pages.News.CreateModel
@{
    ViewBag.Title = "انتشار خبر";
    ViewBag.Model = "خبر";
}

<form enctype="multipart/form-data" method="post">
    <div class="col-md-12 mb-lg-0 mb-4">
        <div class="card mt-4">
            <div class="card-header pb-0 p-3">
                <div class="row">
                    <div class="col-6 d-flex align-items-center">
                        <h6 class="mb-0">انتشار خبر</h6>
                    </div>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>عنوان : </label>
                            <input type="text" class="form-control" asp-for="News.Title" />
                        </div>
                    </div>
                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg">
                            <label>مقدمه : </label>
                            <input type="text" class="form-control" asp-for="News.Introduction" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>نوع خبر : </label>
                            <select class="form-control" asp-for="News.NewsTypeId">
                                <option hidden selected>نوع خبر را انتخاب کنید</option>
                                @foreach (var newsType in Model.NewsTypes)
                                {
                                    <option value="@newsType.Id">@newsType.Title</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>زبان : </label>
                            <select class="form-control" asp-for="News.LanguageId">
                                <option hidden selected>زبان مورد نظر را انتخاب کنید</option>
                                @foreach (var language in Model.Languages)
                                {
                                    <option value="@language.Id">@language.Title</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>متن : </label>
                            <textarea asp-for="News.Text" class="form-control">

                            </textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>تاریخ انتشار : </label>
                            <input type="date" class="form-control" asp-for="News.PublishDate" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>عکس اصلی : </label>
                            <input type="file" class="form-control" name="mainImage" id="mainImage" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>عکس دوم : </label>
                            <input type="file" class="form-control" name="image" id="mainImage" />
                        </div>
                    </div>

                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>عکس سوم : </label>
                            <input type="file" class="form-control" name="image" id="mainImage" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <input type="submit" class="btn-success btn" value="انتشار خبر" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{

    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>

        CKEDITOR.replace('News_Text', {
            customConfig: '/js/Config.js'
        });

    </script>
}
