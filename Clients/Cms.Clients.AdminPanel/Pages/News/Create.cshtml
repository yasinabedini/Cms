@page
@model Cms.Clients.AdminPanel.Pages.News.CreateModel
@{
    ViewBag.Title = "انتشار خبر";
    ViewBag.Page = "انتشار خبر";
}


<form enctype="multipart/form-data" method="post">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">انتشار خبر</h3>
        </div>
        <div class="col-md-12 mb-lg-0 mb-4">
            <div class="card mt-4">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>عنوان : <span class="text-danger">*</span>  </label>
                                <input type="text" class="form-control" asp-for="News.Title" />
                            </div>
                        </div>
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg">
                                <label>مقدمه : <span class="text-danger">*</span> </label>
                                <input type="text" class="form-control" asp-for="News.Introduction" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>نوع خبر : <span class="text-danger">*</span> </label>
                                <select class="form-control" asp-for="News.NewsTypeId">
                                    <option hidden selected>نوع خبر را انتخاب کنید</option>
                                    @foreach (var newsType in Model.NewsTypes)
                                    {
                                        <option value="@newsType.Id">@newsType.Title</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>زبان : <span class="text-danger">*</span> </label>
                                <select class="form-control" asp-for="News.LanguageId">
                                    <option hidden selected>زبان مورد نظر را انتخاب کنید</option>
                                    @foreach (var language in Model.Languages)
                                    {
                                        <option value="@language.Id">@language.Title</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>متن : <span class="text-danger">*</span> </label>

                                <div class="col-md-12">
                                    <div class="card card-info ">
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                            <div class="mb-3 mt-3">
                                                <textarea id="editor1" asp-for="News.Text" style="width: 100%">لطفا متن مورد نظر خودتان را وارد کنید</textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card -->

                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-12 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <label>تاریخ انتشار : <span class="text-danger">*</span> </label>
                                <input type="date" class="form-control" asp-for="News.PublishDate" value="@DateTime.Now" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <label for="exampleInputFile">تصویر اصلی خبر <span class="text-danger">*</span> </label>
                            <div class="input-group">

                                <input type="file" asp-for="MainImage" class="form-control" id="mainImage">

                                <a class="btn btn-danger btn-sm text-white p-2" onclick="clearFileInput('mainImage',true)">
                                    <i class=" fa fa-trash"></i>
                                </a>
                            </div>
                            <span class="text-danger" asp-validation-for="MainImage"></span>
                        </div>

                        <div class="col-md-6 mb-md-0 mb-4">
                            <img id="mainImgAvatar" class=" ImageBox" src="~/dist/img/DefalutPic.png" />
                        </div>


                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <label for="exampleInputFile">تصویر جانبی خبر</label>
                            <div class="input-group">
                                <input type="file" class="form-control" asp-for="Images" id="secondImage">
                                <a class="btn btn-danger btn-sm text-white p-2" onclick="clearFileInput('secondImage',false)">
                                    <i class=" fa fa-trash"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 mb-md-0 mb-4">
                            <label for="exampleInputFile">تصویر جانبی خبر</label>
                            <div class="input-group">
                                <input type="file" class="form-control" asp-for="Images" id="thirdImage">
                                <a class="btn btn-danger btn-sm text-white p-2" onclick="clearFileInput('thirdImage',false)">
                                    <i class=" fa fa-trash"></i>
                                </a>
                            </div>
                        </div>
                        <span asp-validation-for="Images" class="text-danger"></span>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12 mb-md-0 mb-4">
                            <div class="card card-body card-plain border-radius-lg ">
                                <input type="submit" class="btn-success btn" value="انتشار خبر" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>

@section Scripts {

    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2()

            //Datemask dd/mm/yyyy
            $('#datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' })
            //Datemask2 mm/dd/yyyy
            $('#datemask2').inputmask('mm/dd/yyyy', { 'placeholder': 'mm/dd/yyyy' })
            //Money Euro
            $('[data-mask]').inputmask()

            $('.normal-example').persianDatepicker();
        })
    </script>

    <script src="/dist/js/persian-date.min.js"></script>
    <script src="/dist/js/persian-datepicker.min.js"></script>
    <!-- InputMask -->
    <script src="/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <script src="/plugins/input-mask/jquery.inputmask.extensions.js"></script>
    <script src="/plugins/daterangepicker/daterangepicker.js"></script>

    <script>
        $(function () {
            // Replace the <textarea id="editor1"> with a CKEditor
            // instance, using default configuration.
            ClassicEditor
                .create(document.querySelector('#editor1'))
                .then(function (editor) {
                    // The editor instance
                })
                .catch(function (error) {
                    console.error(error)
                })

            // bootstrap WYSIHTML5 - text editor

            $('.textarea').wysihtml5({
                toolbar: { fa: true }
            })
        })
    </script>

    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#mainImgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#mainImage").change(function () {
            readURL(this);
        });
    </script>

    <script>
        function clearFileInput(id, mainImage) {
            // Assuming there's an <input type="file" id="fileInput"> in your HTML
            document.getElementById(id).value = "";
            if (mainImage === true) {
                document.getElementById('mainImgAvatar').removeAttribute('src');
                document.getElementById('mainImgAvatar').setAttribute('src', '/dist/img/DefalutPic.png');
            }
        }
    </script>
}