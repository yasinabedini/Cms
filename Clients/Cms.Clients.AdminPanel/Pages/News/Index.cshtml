@page
@using Cms.Clients.AdminPanel.Pages.News
@model IndexModel
@{
    ViewBag.Title = "لیست اخبار";
    ViewBag.Model = "خبر";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6 class="d-inline">لیست اخبار</h6>
                <a class="btn btn-success float-start d-inline" href="/news/create">انتشار خبر جدید</a>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">عنوان خبر</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">نویسنده</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">وضعیت</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">تاریخ انتشار</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var news in Model.NewsList.QueryResult.ToList())
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <img src="/img/small-logos/logo-jira.svg" class="avatar avatar-sm me-3" alt="user1">
                                            </div>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@news.Title</h6>                                                
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">کاربر تستی</p>                                        
                                    </td>
                                  @if (news.IsEnable)
                                    {
                                        <td class="align-middle text-center text-sm">
                                            <span class="badge badge-sm bg-gradient-success">Enable</span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="align-middle text-center text-sm">
                                            <span class="badge badge-sm bg-gradient-secondary">Disable</span>
                                        </td>
                                    }

                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">@news.PublishDate</span>
                                    </td>
                                    <td class="align-middle">
                                        <a href="/news/edit?id=@news.Id" class="badge badge-sm bg-gradient-info" data-toggle="tooltip" data-original-title="Edit user">
                                            ویرایش خبر
                                        </a>
                                        <a href="/news/edit?id=@news.Id" class="badge text-black badge-sm bg-gradient-info" data-toggle="tooltip" data-original-title="Edit user">
                                            جزئیات
                                        </a>
                                        <a href="/news/edit?id=@news.Id" class="badge badge-sm bg-gradient-danger" data-toggle="tooltip" data-original-title="Edit user">
                                            حذف
                                        </a>
                                    </td>
                                </tr>
                            }
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>