@page
@model Cms.Clients.AdminPanel.Pages.User.CreateModel
@{
    ViewBag.Title = "ثبت کاربر جدید";
    ViewBag.Page = "کاربران";
}

<form method="post">
    <div class="col-md-12 mb-lg-0 mb-4">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">ثبت کاربر جدید</h3>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>نام : <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" asp-for="User.Name" />
                        </div>
                    </div>

                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg">
                            <label>نام کاربری : <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" asp-for="User.UserName" />
                            <span asp-validation-for="User.UserName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>شماره موبایل : <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" asp-for="User.PhoneNumber" />
                            <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg">
                            <label>ایمیل :</label>
                            <input type="text" class="form-control" asp-for="User.Email" />
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg">
                            <label>کلمه عبور : <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg">
                            <label>تکرار کلمه عبور : <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" asp-for="Re_Password" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg">
                            <label>نقش ها :</label>

                           <div class="row">
                                @foreach (var role in Model.RoleList)
                                {
                                    <div class="m-4">
                                        @role.NormalizedName
                                        <input type="checkbox" value="@role.Name" name="Roles" />
                                    </div>
                                }
                               </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4 mt-4">
                        <div class="card">
                            <input type="submit" class="btn-success btn" value="ثبت نام کاربر" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>