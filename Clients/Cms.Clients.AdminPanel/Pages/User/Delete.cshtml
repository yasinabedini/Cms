@page
@model Cms.Clients.AdminPanel.Pages.User.DeleteModel
@{
}

<form method="post">
    <input type="hidden" asp-for="User.Id" />

    <div class="col-md-12 mb-lg-0 mb-4">
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">حذف کاربر</h3>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>نام : <span class="text-danger">*</span></label>
                            <input disabled type="text" class="form-control" asp-for="User.Name" />
                        </div>
                    </div>

                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg">
                            <label>نام کاربری : <span class="text-danger">*</span></label>
                            <input disabled type="text" class="form-control" asp-for="User.UserName" />                            
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg ">
                            <label>شماره موبایل : <span class="text-danger">*</span></label>
                            <input disabled type="text" class="form-control" asp-for="User.PhoneNumber" />
                        </div>
                    </div>

                    <div class="col-md-6 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg">
                            <label>ایمیل : <span class="text-danger">*</span></label>
                            <input disabled type="text" class="form-control" asp-for="User.Email" />
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12 mb-md-0 mb-4">
                        <div class="card card-body card-plain border-radius-lg">
                            <label>نقش ها : </label>

                            <div class="row">
                                @foreach (var role in Model.RoleList)
                                {
                                    <div class="m-4">
                                        @role.NormalizedName
                                        <input disabled type="checkbox" value="@role.Name" name="UserRoleSelected" checked="@Model.UserRoles.Contains(role.Name)" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 mb-md-0 mb-4 mt-4">
                    <div class="card">
                        <input type="submit" class="btn-danger btn" value="حذف کاربر" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>
