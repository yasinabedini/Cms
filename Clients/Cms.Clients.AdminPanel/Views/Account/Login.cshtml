@using Cms.Clients.AdminPanel.ViewModels
@model LoginViewModel

@{
}




<div class="wrap-login100">
	<form asp-controller="Account" asp-action="Login" class="login100-form validate-form" autocomplete="off">
		<input type="hidden" asp-for="ReturnUrl"/>
		<span class="login100-form-logo">
			<img class="login100-form-logo  p-3" src="/login/images/logo.webp" />
		</span>

		<span class="login100-form-title p-b-34 p-t-27">
			ورود
		</span>
		<div class="wrap-input100 validate-input" data-validate="شماره موبایل خود را وارد کنید">
			<input class="input100" type="text" asp-for="PhoneNumber" placeholder="شماره موبایل">
			<span class="focus-input100" data-placeholder="&#xf207;"></span>			
		<span asp-validation-for="PhoneNumber" class="text-white"></span>
		</div>

		<div class="wrap-input100 validate-input" data-validate="رمز عبور خود را وارد کنید">
			<input class="input100" type="password" asp-for="Password" placeholder="رمز عبور">
			<span class="focus-input100" data-placeholder="&#xf191;"></span>
		</div>

		<div class="contact100-form-checkbox">
			<input class="input-checkbox100" id="ckb1" type="checkbox" asp-for="RemmemberMe">
			<label class="label-checkbox100" for="ckb1">
				مرا به خاطر بسپار
			</label>
		</div>

		<div class="container-login100-form-btn">
			<button class="login100-form-btn">
				ورود
			</button>
		</div>

		<div class="text-center p-t-90">
			<a class="txt1" href="#">
				رمز عبور خود را فراموش کردم?
			</a>
		</div>
	</form>
</div>