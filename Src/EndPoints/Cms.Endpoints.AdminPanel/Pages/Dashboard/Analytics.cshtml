@page
@using Cms.Endpoints.AdminPanel.Pages.Dashboard
@model AnalyticsModel
@{
    ViewData["Title"] = "داشبورد";
}

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/apex-charts/apex-charts.dist.css" />
    <link rel="stylesheet" href="~/vendor/libs/swiper/swiper.dist.css" />
    <link rel="stylesheet" href="~/vendor/libs/datatables-bs5/datatables.bootstrap5.dist.css">
    <link rel="stylesheet" href="~/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.dist.css">
    <link rel="stylesheet" href="~/vendor/libs/datatables-checkboxes-jquery/datatables.checkboxes.dist.css">
    <link rel="stylesheet" href="~/vendor/libs/apex-charts/apex-charts.dist.css" />
}

@section VendorScripts {
    <script src="~/vendor/libs/apex-charts/apexcharts.dist.js"></script>
    <script src="~/vendor/libs/swiper/swiper.dist.js"></script>
    <script src="~/vendor/libs/datatables-bs5/datatables-bootstrap5.dist.js"></script>
    <script src="~/vendor/libs/apex-charts/apexcharts.dist.js"></script>
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/cards-advance.dist.css" />
}

@section PageScripts {
    <script src="~/js/dashboards-analytics.dist.js"></script>
    <script src="~/js/cards-analytics.dist.js"></script>
}

@* ************** Content ************** *@
<div class="row rtl">
    <!-- Website Analytics -->
    <div class="col-lg-6 mb-4">
        <div class="swiper-container swiper-container-horizontal swiper swiper-card-advance-bg" id="swiper-with-pagination-cards">
            <div class="swiper-wrapper">

                <div class="swiper-slide">
                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-white mb-0 mt-2">بررسی اخبار</h5>
                            <small>تعداد کل : @Model.News.Count</small>
                        </div>
                        <div class="row">
                            <div class="col-lg-7 col-md-9 col-12 order-2 order-md-1">
                                <h6 class="text-white mt-0 mt-md-3 mb-3">گزارش</h6>
                                <div class="row">
                                    <div class="col-6">
                                        <ul class="list-unstyled mb-0">
                                            <li class="d-flex mb-4 align-items-center">
                                                <p class="mb-0 fw-medium me-2 website-analytics-text-bg">@ViewData["newsCount"]</p>
                                                <p class="mb-0">اخبار</p>
                                            </li>
                                            <li class="d-flex align-items-center mb-2">
                                                <p class="mb-0 fw-medium me-2 website-analytics-text-bg">@ViewData["notificationCount"]</p>
                                                <p class="mb-0">اطلاعیه ها</p>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-6">
                                        <ul class="list-unstyled mb-0">
                                            <li class="d-flex mb-4 align-items-center">
                                                <p class="mb-0 fw-medium me-2 website-analytics-text-bg">@ViewData["eventCount"]</p>
                                                <p class="mb-0">رویدادها</p>
                                            </li>
                                            <li class="d-flex align-items-center mb-2">
                                                <p class="mb-0 fw-medium me-2 website-analytics-text-bg">@Model.News.Count(t => t.IsEnable)</p>
                                                <p class="mb-0">اخبار فعال</p>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-5 col-md-3 col-12 order-1 order-md-2 my-4 my-md-0 text-center">
                                <img src="~/img/illustrations/card-website-analytics-1.png" alt="Website Analytics" width="170" class="card-website-analytics-img">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="swiper-slide">
                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-white mb-0 mt-2">بررسی کاربران</h5>
                            <small>تعداد کل : @Model.Users.Count</small>
                        </div>
                        <div class="row">
                            <div class="col-lg-7 col-md-9 col-12 order-2 order-md-1">
                                <h6 class="text-white mt-0 mt-md-3 mb-3">گزارش</h6>
                                <div class="row">
                                    <div class="col-6">
                                        <ul class="list-unstyled mb-0">
                                            <li class="d-flex mb-4 align-items-center">
                                                <p class="mb-0 fw-medium me-2 website-analytics-text-bg">@Model.Users.Count(t => t.LockoutEnabled)</p>
                                                <p class="mb-0">کاربران فعال</p>
                                            </li>
                                            <li class="d-flex align-items-center mb-2">
                                                <p class="mb-0 fw-medium me-2 website-analytics-text-bg">@Model.Users.Count(t => !t.LockoutEnabled)</p>
                                                <p class="mb-0">کاربران مسدود</p>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-6">
                                        <ul class="list-unstyled mb-0">
                                            <li class="d-flex mb-4 align-items-center">
                                                <p class="mb-0 fw-medium me-2 website-analytics-text-bg">@ViewData["roleCount"]</p>
                                                <p class="mb-0">تعداد نقش ها</p>
                                            </li>
                                            <li class="d-flex align-items-center mb-2">
                                                <p class="mb-0 fw-medium me-2 website-analytics-text-bg">@Model.Users.Count</p>
                                                <p class="mb-0">تعداد کل کاربران</p>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-5 col-md-3 col-12 order-1 order-md-2 my-4 my-md-0 text-center">
                                <img src="~/img/illustrations/card-website-analytics-1.png" alt="Website Analytics" width="170" class="card-website-analytics-img">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
    <!--/ Website Analytics -->
    <!-- Sales Overview -->
    <div class="col-lg-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <small class="d-block mb-1 text-muted">وضعیت کاربران</small>
                    
                </div>
                <h4 class="card-title mb-1">@Model.Users.Count نفر</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-4">
                        <div class="d-flex gap-2 align-items-center mb-2">
                            <span class="badge bg-label-info p-1 rounded"><i class="ti ti-login ti-xs"></i></span>
                            <p class="mb-0">فعال</p>
                        </div>
                        <h5 class="mb-0 pt-1 text-nowrap">88%</h5>
                        <small class="text-muted">@Model.Users.Count(t => t.LockoutEnabled) نفر</small>
                    </div>
                    <div class="col-4">
                        <div class="divider divider-vertical">
                            <div class="divider-text">
                                <span class="badge-divider-bg bg-label-secondary">VS</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="d-flex gap-2 justify-content-end align-items-center mb-2">
                            <p class="mb-0">مسدود</p>
                            <span class="badge bg-label-primary p-1 rounded"><i class="ti ti-lock-access ti-xs"></i></span>
                        </div>
                    
                        <h5 class="mb-0 pt-1 text-nowrap ms-lg-n3 ms-xl-0">12%</h5>
                        <small class="text-muted">@Model.Users.Count(t => !t.LockoutEnabled) نفر</small>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-4">
                    <div class="progress w-100" style="height: 8px;">

                        <div class="progress-bar bg-info" style="width: 88%" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 12%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ Sales Overview -->
    <!-- Revenue Generated -->
    <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body pb-0">
                <div class="card-icon">
                    <span class="badge bg-label-success rounded-pill p-2">
                        <i class='ti ti-paperclip ti-sm'></i>
                    </span>
                </div>
                <h5 class="card-title mb-0 mt-2">@Model.News.Count خبر</h5>
                <small>آمار کل اخبار</small>
            </div>
            <div id="revenueGenerated"></div>
        </div>
    </div>
    <!--/ Revenue Generated -->
    <!-- Source Visit -->
    <div class="col-xl-4 col-md-6 order-2 order-lg-1 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="card-title mb-0">
                    <h5 class="mb-0">آخرین کاربران</h5>
                    <small class="text-muted">تعداد کل : @Model.Users.Count</small>
                </div>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    @foreach (var user in Model.Users.Take(8))
                    {
                        <li class="mb-3 pb-1">
                            <div class="d-flex align-items-start">
                                <div class="avatar-wrapper">
                                    <div class="avatar me-3">
                                        <span class="avatar-initial rounded-circle bg-label-danger">@user.UserName.Substring(0, 2)</span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between w-100 flex-wrap gap-2">
                                    <div class="me-2">
                                        <h6 class="mb-0">@user.Name</h6>
                                        <small class="text-muted">@user.PhoneNumber</small>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <a href="/users/details/@user.Id" class="btn btn-sm btn-primary ms-3 text-white">مشاهده</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!--/ Source Visit -->
    <!-- Projects table -->
    <div class="col-12 col-xl-8 col-sm-12 order-1 order-lg-2 mb-4 mb-lg-0">
        <div class="card">
            <div class="card-datatable table-responsive">
                <table class="table border-top">
                    <thead>
                        <tr>
                            <th>خبر</th>
                            <th>نویسنده</th>
                            <th>وضعیت</th>
                            <th>نوع خبر</th>
                            <th>تاریخ انتشار</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    <tbody>
                            @foreach (var news in Model.News.Take(6))
                            {
                            <tr>
                                <td class="  control" tabindex="0" style="display: none;"></td>

                                <td>
                                    <a href="/news/details/@news.Id">
                                        <span>#@news.Id</span>
                                    </a>
                                </td>

                                <td>
                                    <div class="d-flex justify-content-start align-items-center order-name text-nowrap">
                                        <div class="avatar-wrapper">
                                            <div class="avatar me-3">
                                                <span class="avatar-initial rounded-circle bg-label-danger">@news.Author.Substring(0, 2)</span>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-column">
                                            <h6 class="m-0">
                                                <a href="/Pages/Profile/User" class="text-body">@news.Author</a>
                                            </h6>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                        @if (news.IsEnable)
                                        {
                                        <h6 class="mb-0 align-items-center d-flex w-px-100 text-success">
                                            <i class="ti ti-circle-filled fs-tiny me-2">

                                            </i>
                                            فعال
                                        </h6>
                                        }
                                        else
                                        {
                                        <h6 class="mb-0 align-items-center d-flex w-px-100 text-warning">
                                            <i class="ti ti-circle-filled fs-tiny me-2">

                                            </i>
                                            غیرفعال
                                        </h6>
                                        }
                                </td>

                                <td>
                                    <span class="badge px-2 bg-label-primary" text-capitalized="">@news.NewsType.Title</span>
                                </td>

                                <td class="sorting_1"><span class="text-nowrap">@news.PublishDate</span></td>

                                <td>
                                    <div class="d-flex justify-content-sm-center align-items-sm-center">
                                        <button class="btn btn-sm btn-icon dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="ti ti-dots-vertical">

                                            </i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-end m-0">
                                            <a href="/news/details/@news.Id" class="dropdown-item">مشاهده</a>
                                                @if (news.IsEnable)
                                                {
                                                <a href="/News/ChangeAvailibility/@news.Id?redirectTo=/news/list" class="dropdown-item delete-record">غیرفعال کردن</a>
                                                }
                                                else
                                                {
                                                <a href="/News/ChangeAvailibility/@news.Id?redirectTo=/news/list" class="dropdown-item delete-record">فعال کردن</a>
                                                }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/ Projects table -->
</div>
